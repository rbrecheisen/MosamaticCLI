[tool.poetry]
name = "mosamatic-cli-macos"
version = "1.6.2"
description = "A CLI tool for body composition analysis from DICOM CT scans (MacOS version)"
authors = ["Ralph Brecheisen <ralph.brecheisen@gmail.com>"]
license = "MIT"
readme = "README.md"
packages = [
    { include = "mosamatic", from = "." },
    { include = "models.py", from = "." },
]

[tool.poetry.dependencies]
python = ">=3.11,<3.12"
poetry = "^2.1.4"
click = "<8.1.8"
pandas = "^2.3.1"
openpyxl = "^3.1.5"
pendulum = "^3.1.0"
pillow = "^11.3.0"
python-gdcm = "^3.0.26"
torch = "^2.8.0"
torchvision = "^0.23.0"
tensorboard = "2.15.2"
tensorboard-data-server = "0.7.2"
tensorflow = "2.15.0"
tensorflow-macos = "2.15.0"

[tool.poetry.scripts]
mosamatic = "mosamatic.main:cli"

[tool.poetry.group.dev.dependencies]
pytest = "^8.4.1"

[tool.pytest.ini_options]
addopts = "-s"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"